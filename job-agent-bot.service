[Unit]
Description=Discord Job Agent Bot
After=network.target

[Service]
Type=simple
User=YOUR_USERNAME
WorkingDirectory=/path/to/DiscordAgent
Environment="PATH=/path/to/venv/bin"
ExecStart=/path/to/venv/bin/python job_agent_bot.py

# Restart policy
Restart=always
RestartSec=10

# Logging
StandardOutput=append:/var/log/job-agent-bot/output.log
StandardError=append:/var/log/job-agent-bot/error.log

# Security
NoNewPrivileges=true
PrivateTmp=true

[Install]
WantedBy=multi-user.target
